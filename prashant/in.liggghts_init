echo            both
log             ../DEM/log.liggghts
thermo_log      ../DEM/post/thermo.txt

atom_style      superquadric
atom_modify     map array
communicate     single vel yes

boundary        m m m
newton          off

units           si

region          reg block -0.015 0.015 -0.015 0.015 -0.001 0.0554 units box
create_box      1 reg

neighbor        0.001 bin
neigh_modify    delay 0


# Material properties required for superquadric pair styles

fix         m1 all property/global youngsModulus peratomtype 5.e6
fix         m2 all property/global poissonsRatio peratomtype 0.45
fix         m3 all property/global coefficientRestitution peratomtypepair 1 0.3
fix         m4 all property/global coefficientFriction peratomtypepair 1 0.5

# pair style
#pair_style  gran model hertz tangential history # Hertzian without cohesion
pair_style 	gran model hertz tangential history surface superquadric 

pair_coeff  * *

# timestep, gravity
timestep    0.00001
fix         gravi all gravity 9.81 vector 0.0 0.0 -1.0

# walls
fix     zwalls1  all wall/gran model hertz tangential history surface superquadric primitive type 1 zplane 0.0
fix     zwalls2  all wall/gran model hertz tangential history surface superquadric primitive type 1 zplane 0.0553
fix     cylwalls all wall/gran model hertz tangential history surface superquadric primitive type 1 zcylinder 0.01385 0. 0.

# particle distributions and insertion
region  bc cylinder z 0.0 0.0 0.012 0. 0.055 units box
fix     pts1 all particletemplate/superquadric 15485863 atom_type 1 density constant 20 shape constant 0.0005 0.001 0.0005
fix     pdd1 all particledistribution/discrete 15485867 1 pts1 1.0

fix     ins all insert/pack seed 32452843 distributiontemplate pdd1 vel constant 0. 0. -1. insert_every once overlapcheck yes all_in yes particles_in_region 5000 region bc

#fix 	ins all insert/rate/region seed 49979687 distributiontemplate pdd1 nparticles 20000 particlerate 5000 insert_every 10000 orientation random &
overlapcheck yes vel constant 0 0 0 region bc ntry_mc 10000 # number of monte carlo steps to calculate region volume


# apply nve integration to all particles that are inserted as single particles
fix     integr all nve/superquadric integration_scheme 1

# screen output
compute         rke all erotate/superquadric
thermo_style    custom step atoms ke c_rke vol
thermo          1000
thermo_modify   lost ignore norm no
compute_modify  thermo_temp dynamic yes

# insert the first particles so that dump is not empty
run         1
#dump        dmp all custom 5000 post/dump.liggghts_init id type x y z ix iy iz vx vy vz fx fy fz omegax omegay omegaz radius

dump 		4a all custom 1000 cord_1/cord id shapex shapey shapez x y z 
dump		dmp2 all custom 1000 post_1/rigid*.dump id type x y z quat1 quat2 quat3 quat4 shapex shapey shapez vx vy vz fx fy fz blockiness1 blockiness1
dump		dmp all custom/vtk 1000 post_1/dump*.superq.vtk type mass x y z id vx vy vz fx fy fz omegax omegay omegaz radius shapex shapey shapez quat1 quat2 quat3 quat4 blockiness1 blockiness2 tqx tqy tqz angmomx angmomy angmomz


run         20000 upto
write_restart   post/restart/liggghts.restart
